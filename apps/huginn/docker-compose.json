version: "3.3"
services:
  huginn:
    image: huginn/huginn
    ports:
      - 3000:3000
    volumes:
      - $APP_DATA/mysql-data:/var/lib/mysql
    restart: unless-stopped


{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "huginn",
      "image": "huginn/huginn:latest",
      "isMain": true,
      "internalPort": 3000
      "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/huginn/mysql",
          "containerPath": "/var/lib/mysql"
        }
      ]
      
    }
  ]
}

